<resources>
    <style name="Theme.Sparkles.CircleImageView"> 
        <item name="cornerFamily">rounded</item> 
        <item name="cornerSize">50%</item> 
    </style> 
    
    <style name="Widget.Sparkles.CollapsingToolbar" parent="Widget.Material3.CollapsingToolbar.Large">
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.Sparkles.CollapsingToolbar.Collapsed</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.Sparkles.CollapsingToolbar.Expanded</item>
        <item name="titleCollapseMode">fade</item>
    </style>

    <style name="TextAppearance.Sparkles.CollapsingToolbar.Collapsed" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/afacadfluxregular</item>
        <item name="android:fontFamily">@font/afacadfluxregular</item>
    </style>

    <style name="TextAppearance.Sparkles.CollapsingToolbar.Expanded" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/afacadfluxregular</item>
        <item name="android:fontFamily">@font/afacadfluxregular</item>
    </style>
    
    <!--this code was imported from Rikka Apps' shizuku-->
    <style name="GrantPermissions" parent="@style/AppTheme">
        <item name="android:colorBackground">?colorBackgroundFloating</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        
    </style>
     <style name="GrantPermissionsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorOnPrimaryContainer</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GrantPermissionsButtons.Top">
        <item name="android:background">@drawable/grant_permissions_buttons_top</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="GrantPermissionsButtons.Buttom">
        <item name="android:background">@drawable/grant_permissions_buttons_bottom</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>
    
</resources>
